{
  "manifest_version": 3,
  "name": "YouTube Zen",
  "version": "1.1.0",
  "description": "Hide distracting YouTube elements: Shorts, recommendations, comments, and homepage feed",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["sync-settings.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "nativeMessaging"],
  "host_permissions": [
    "*://*.youtube.com/*"
  ]
}
